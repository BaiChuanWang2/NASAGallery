<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/nav_main">

    <fragment
        android:id="@+id/nav_main"
        android:name="com.example.nasagallery.ui.fragment.MainFragment">
        <action
            android:id="@+id/action_nav_main_to_nav_gallery"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.nasagallery.ui.fragment.GalleryFragment">
        <action
            android:id="@+id/action_nav_gallery_to_nav_info"
            app:destination="@id/nav_info" />
    </fragment>

    <fragment
        android:id="@+id/nav_info"
        android:name="com.example.nasagallery.ui.fragment.InfoFragment"/>
</navigation>